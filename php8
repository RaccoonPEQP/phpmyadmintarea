CREATE DATABASE redsocial_empleados;

USE redsocial_empleados;

CREATE TABLE EMPLEADOS(
    id INT NOT NULL AUTO_INCREMENT,
    nombre VARCHAR(20) NOT NULL,
    apellido VARCHAR(20) NOT NULL,
    cargo VARCHAR(20) NOT NULL,
    PRIMARY KEY(id)
);

CREATE TABLE RED_SOCIAL(
    id INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    nombre_red_social VARCHAR(15) NOT NULL,
    url_ VARCHAR(20) NOT NULL,
    PRIMARY KEY(id)
);

CREATE TABLE PERFIL(
    EMPLEADOS_id INT NOT NULL,
    RED_SOCIAL_id INT NOT NULL,
    FOREIGN KEY (EMPLEADOS_id) REFERENCES EMPLEADOS(id) ON DELETE CASCADE,
    FOREIGN KEY (RED_SOCIAL_id) REFERENCES RED_SOCIAL(id) ON DELETE CASCADE
);