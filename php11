CREATE DATABASE CARNICERIA_RESTAURANTE;

USE CARNICERIA_RESTAURANTE;

CREATE TABLE CARNICERIA(
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo_animal VARCHAR(15) NOT NULL,
);

CREATE TABLE CORTES(
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo_corte VARCHAR(15) NOT NULL,
    precio INT NOT NULL
);

CREATE TABLE RECETAS_O_PLATOS(
    id INT AUTO_INCREMENT PRIMARY KEY,
    CARNICERIA_id INT NOT NULL,
    CORTES_id INT NOT NULL,
    FOREIGN KEY(CARNICERIA_id) REFERENCES CARNICERIA(id) ON DELETE CASCADE ON UPDATE CASCADE,
    FOREIGN KEY(CORTES_id) REFERENCES CORTES(id) on DELETE CASCADE ON UPDATE CASCADE
);